        Scanner ref=new Scanner(System.in);
        System.out.println("Enter your pin");
        int pin=ref.nextInt();
        if (pin==1234) {
        	System.out.println("Enter your amount");
        	int amount=ref.nextInt();
        	if(amount<=5000) {
        		//withdrawn successfully
        		
        	}
        	else {
        		//insufficient
        
        	}
        }
        else {
        	//invalid
        }
    }
}
